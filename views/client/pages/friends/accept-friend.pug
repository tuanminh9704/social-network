extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main

  .container.my-3
    include ../../partials/friend.pug  
    h1 Lời mời kết bạn
    .row 
      if (users.length > 0)
        each user in users
          .col-2
            div(class="request-friend-notification")
            div(class="box-user")
              div(class="inner-avatar")
                img(src="https://cellphones.com.vn/sforum/wp-content/uploads/2023/10/avatar-trang-4.jpg", alt="")
              div(class="inner-info")
                div(class="inner-fullname") #{user.fullName}
                div(class="inner-buttons")
                  button(
                    class="button-accept btn btn-sm btn-primary mr-1"
                    button-accept-friend=user.id
                  ) Xác nhận
                  button(
                    class="button-add button-delete btn btn-sm btn-secondary mr-1"
                    button-add-friend=user.id
                  ) Xóa

