extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main

  .container.my-3
    include ../../partials/friend.pug  
    h1 Lời mời kết bạn
    .row 
      if (users.length > 0)
        each user in users
          .col-2
            div(class="box-user" my-id=user.id)
              div(class="inner-avatar")
                img(src=user.avatar, alt="")
              div(class="inner-info")
                div(class="inner-fullname") #{user.fullName}
                div(class="inner-buttons")
                  button(
                    class="button-accept btn btn-sm btn-primary mr-1"
                    button-accept-friend=user.id
                  ) Xác nhận
                  button(
                    class="button-accept-success btn btn-sm btn-secondary mr-1 d-none"
                    button-accept-success
                  ) Xác nhận lời mời kết bạn
                  button(
                    class="button-add button-refuse btn btn-sm btn-secondary mr-1"
                    button-refuse-friend=user.id
                  ) Xóa
                  button(
                    class="button-refused btn btn-sm btn-secondary mr-1 d-none"
                    button-refused
                  ) Đã xóa yêu cầu

