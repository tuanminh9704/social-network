extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main

  .container.my-3
    include ../../partials/friend.pug  
    h1 Danh sách bạn bè
    .row 
      if (users.length > 0)
        each user in users
          .col-2
            div(class="box-user" my-id=user.id)
              div(class="list-operation")
                ul(class="d-none")
                  li 
                    button(class="refuse-friend") Hủy kết bạn
                  li 
                    a(href=`/friends/profile/${user.id}` class="info") Trang cá nhân
                span(userId=user.id)
                  i.fa-solid.fa-ellipsis-vertical.dots    
              div(class="inner-avatar")
                img(src=user.avatar, alt="")
              div(class="inner-info")
                div(class="inner-fullname") #{user.fullName}
                div(class="inner-buttons")
                  span(
                    class="btn btn-sm btn-secondary mr-1 btn-friend"
                  ) Bạn bè
                  span(
                    class="btn btn-sm btn-secondary mr-1 btn-unfriend d-none"
                  ) Đã hủy kết bạn
      else 
        h2 Bạn chưa có bạn bè 

