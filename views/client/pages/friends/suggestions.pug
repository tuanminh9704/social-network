extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main

  .container.my-3
    include ../../partials/friend.pug  
    h1 Gợi ý kết bạn  
    .row 
      if (users.length > 0)
        each user in users
          .col-2
            div(class="box-user")
              div(class="inner-avatar")
                img(src=user.avatar, alt="")
              div(class="inner-info")
                div(class="inner-fullname") #{user.fullName}
                div(class="inner-buttons")
                  button(
                    class="button-add button-requests btn btn-sm btn-primary mr-1"
                    button-add-friend=user.id
                  ) Thêm bạn bè
                  button(
                    class="button-requests-cancel btn btn-sm btn-secondary mr-1"
                    button-cancel=user.id
                  ) Hủy lời mời
                  button(
                    class="button-add button-delete btn btn-sm btn-secondary mr-1"
                    button-add-friend=user.id
                  ) Xóa

